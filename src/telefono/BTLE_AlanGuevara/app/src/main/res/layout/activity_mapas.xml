<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ==========================================================
         MAPA OSM
         ========================================================== -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapaOSM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ==========================================================
         BARRA DE BÚSQUEDA
         ========================================================== -->
    <LinearLayout
        android:id="@+id/layoutBusqueda"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_busqueda"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/edtBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar ubicación..."
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>


    <!-- ==========================================================
         CHIPS SUPERIORES (Contaminantes - Índice - Fecha)
         ========================================================== -->
    <LinearLayout
        android:id="@+id/layoutChips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- CHIP CONTAMINANTES -->
        <LinearLayout
            android:id="@+id/chipContaminantes"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/bg_chip"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/txtChipContaminantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Contaminantes"
                android:textColor="#059669"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- CHIP INDICE -->
        <LinearLayout
            android:id="@+id/chipIndice"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/bg_chip"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/txtChipIndice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Índice"
                android:textColor="#059669"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- CHIP FECHA -->
        <LinearLayout
            android:id="@+id/chipFecha"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/bg_chip"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtChipFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Ahora"
                android:textColor="#059669"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <!-- ==========================================================
         BOTÓN GEOLOCALIZACIÓN
         ========================================================== -->
    <ImageButton
        android:id="@+id/btnMiUbicacion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_boton_mapa"
        android:src="@drawable/ic_target"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- ==========================================================
         PANEL INFERIOR (BOTTOM SHEET) – CONTAMINANTES
         ========================================================== -->
    <LinearLayout
        android:id="@+id/bottomSheetContaminantes"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/bg_bottomsheet"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_handle"
            android:layout_marginBottom="14dp"/>

        <TextView
            android:id="@+id/txtTituloContaminantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contaminantes"
            android:textColor="#1F2B38"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="16dp"/>

        <!-- LISTA DE GASES (solo layout) -->
        <LinearLayout
            android:id="@+id/listaGases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- GAS (REPETIR ESTILO LUEGO CON DINÁMICA) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_gasitem"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/txtGasEjemplo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO"
                    android:textSize="18sp"
                    android:textColor="#1F2B38"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- ==========================================================
         BOTTOM NAV
         ========================================================== -->
    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
