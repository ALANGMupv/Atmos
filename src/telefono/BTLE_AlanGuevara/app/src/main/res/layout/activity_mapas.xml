<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <include
        android:id="@+id/header"
        layout="@layout/toolbar_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===========================================================
         CONTENEDOR DE CONTAMINANTES (chips)
         =========================================================== -->
    <LinearLayout
        android:id="@+id/layoutContaminantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO + ICONO INFO -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contaminantes"
                android:textColor="#1F2B38"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"/>

            <ImageView
                android:id="@+id/infoContaminantes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_info"
                android:contentDescription="Info"/>
        </LinearLayout>

        <!-- FILA DE CHIPS -->
        <LinearLayout
            android:id="@+id/filaChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <!-- CHIP ACTIVO: CO -->
            <LinearLayout
                android:id="@+id/chipCO"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_chip_selected"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cloudsnow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO"
                    android:textColor="#059669"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- CHIP O3 -->
            <LinearLayout
                android:id="@+id/chipO3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_chip_unselected"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/clouddrizzle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O3"
                    android:textColor="#1F2B38"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- CHIP SO3 -->
            <LinearLayout
                android:id="@+id/chipSO3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_chip_unselected"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/wind"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SO3"
                    android:textColor="#1F2B38"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

            <!-- CHIP NO2 -->
            <LinearLayout
                android:id="@+id/chipNO2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_chip_unselected"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/cloud"/>

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="NO2"
                    android:textColor="#1F2B38"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ===========================================================
         CONTENEDOR CENTRADO (queda DEBAJO de los chips)
         =========================================================== -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layoutContaminantes"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imgAtmos"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="Logo Atmos"
            android:src="@drawable/logo_atmos_verde" />

        <TextView
            android:id="@+id/txtMantenimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:text="Página en mantenimiento\nPróximamente"
            android:textColor="#059669"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- MENU INFERIOR -->
    <include
        android:id="@+id/bottom_nav_container"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
