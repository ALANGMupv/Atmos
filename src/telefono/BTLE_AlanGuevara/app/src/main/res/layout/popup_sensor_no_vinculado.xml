<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- Fondo oscuro 50% -->

    <!-- TARJETA CENTRAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="26dp"
        android:background="@drawable/bg_popup_white"
        android:clipToPadding="false">

        <!-- ICONO DE ERROR -->
        <ImageView
            android:id="@+id/iconoErrorVinculacion"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sensor_no_vinculado"
            android:layout_marginBottom="18dp"/>

        <!-- TÍTULO ERROR -->
        <TextView
            android:id="@+id/txtTituloError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Error al vincular el sensor!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textColor="#0F1F33"
            android:gravity="center" />

        <!-- TEXTO DESCRIPTIVO -->
        <TextView
            android:id="@+id/txtDescripcionError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="No se pudo completar la vinculación.\nPor favor, verifica el código e inténtalo nuevamente."
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"
            android:textColor="#555555"
            android:gravity="center"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</FrameLayout>
