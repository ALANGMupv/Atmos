<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Botón cerrar (grande, arriba a la derecha) -->
            <ImageView
                android:id="@+id/btnCerrar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Cerrar"
                android:padding="6dp"/>

            <!-- Contenido -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:paddingTop="32dp">

                <!-- Título del modal -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar una incidencia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <!-- Título de la incidencia -->
                <EditText
                    android:id="@+id/etTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Introduce un título para tu incidencia..."
                    android:background="@drawable/spinner_borde"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="textCapSentences"/>

                <!-- Descripción -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="12dp"
                    android:fillViewport="true">

                    <EditText
                        android:id="@+id/etDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe tu incidencia con detalle..."
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:background="@drawable/spinner_borde"
                        android:padding="12dp"/>
                </ScrollView>

                <!-- Botón enviar -->
                <Button
                    android:id="@+id/btnEnviar"
                    style="@style/BotonSecundarioOutlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enviar Incidencia" />

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
