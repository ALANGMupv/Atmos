<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/popup_background"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- ============================
             BOTÓN DE CERRAR ARRIBA
             ============================ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnCerrarPopup"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Cerrar"
                android:padding="6dp"
                android:src="@drawable/ic_cerrar" />
        </LinearLayout>

        <!-- SCROLL DEL CONTENIDO -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- ============================
                 TARJETA 1 — Estado del Sensor
                 ============================ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/card_accion_menu"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Estado del Sensor"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Muestra el estado actual del nodo sensor. Puede estar conectado y activo o desconectado e inactivo."
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- ============================
                     TARJETA 2 — Distancia al Sensor
                     ============================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/card_accion_menu"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Distancia al Sensor"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indica la intensidad de la señal entre tu móvil y el sensor Atmos midiendo la potencia de la señal.  Una señal alta significa que el sensor está cerca o bien conectado; una señal baja puede indicar más distancia o interferencias."
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- ============================
                     TARJETA 3 — Última Medición
                     ============================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/card_accion_menu"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Última medición"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Es el valor más reciente captado por tu sensor. Este valor se actualiza periódicamente y permite saber en tiempo real cómo está la calidad del aire justo ahora."
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- ============================
                     TARJETA 4 — Promedio del día
                     ============================ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/card_accion_menu"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Promedio del día"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Promedio registrado del día según tu sensor. Ayuda a entender cómo ha sido la calidad del aire durante la jornada, más allá de picos puntuales."
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
