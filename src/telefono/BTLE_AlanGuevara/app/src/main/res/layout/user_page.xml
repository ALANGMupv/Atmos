<?xml version="1.0" encoding="utf-8"?>
<!--
    Nombre fichero: user_page.xml
    Descripción: Pantalla "Mi Sensor". Muestra:
                 - Saludo al usuario
                 - Vista sin sensor (Ups…)
                 - Vista con sensor (tarjetas y gráfica)

    Autora: Nerea Aguilar Forés
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- =============================================================
         HEADER SUPERIOR
         ============================================================= -->
    <include layout="@layout/toolbar_header"/>

    <!-- =============================================================
         CONTENIDO DESLIZABLE (todo menos el menú inferior)
         ============================================================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- =============================================================
                 CARTEL DE BIENVENIDA (¡Hola, Usuario!)
                 ============================================================= -->
            <LinearLayout
                android:id="@+id/cartelBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="@drawable/fondo_degradado">

                <TextView
                    android:id="@+id/textBienvenida"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="¡Hola, Usuario!"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- *************************************************************
                 VISTA SIN SENSOR (Ups…)
                 ************************************************************* -->
            <LinearLayout
                android:id="@+id/layoutSinSensor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Ups… aún no has vinculado tu sensor"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="Para comenzar a ver datos de calidad del aire y activar todas las funciones, vincula tu sensor."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:padding="0dp"
                    android:src="@drawable/imagen_sin_sensor" />


                <Button
                    android:id="@+id/btnVincularSensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_redondo_verde"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:text="Vincular sensor"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- *************************************************************
                 VISTA CON SENSOR
                 ************************************************************* -->
            <LinearLayout
                android:id="@+id/layoutConSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <!-- CONTENIDO -->
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- *************************************************************
                    SELECTOR DE CONTAMINANTE
                    ************************************************************* -->

                    <LinearLayout
                        android:id="@+id/layoutSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <!-- =============================================================
                        ICONO DE INFORMACIÓN
                        ============================================================= -->
                        <ImageView
                            android:id="@+id/iconoInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Información"
                            android:padding="0dp"
                            android:src="@drawable/ic_info" />

                        <Spinner
                            android:id="@+id/spinnerContaminante"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/spinner_borde"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <!-- =====================================================
                         FILA 1: Estado del Sensor + Distancia al Sensor
                         ===================================================== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Estado del Sensor  -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Estado del Sensor"
                                    android:textSize="14sp" />

                                <!-- Icono del estado del sensor -->
                                <ImageView
                                    android:id="@+id/iv_estado_sensor"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_sensor_activo" />

                                <TextView
                                    android:id="@+id/tv_estado_texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Sensor activo"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Distancia al Sensor (DERECHA) -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="Distancia al Sensor"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/img_wifi"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_wifi" />

                                <TextView
                                    android:id="@+id/tv_distancia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textColor="@color/black"
                                    android:text="Señal Alta"
                                    android:textSize="14sp"
                                    android:layout_marginTop="10dp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- =====================================================
                         FILA 2: Promedio del Día + Última Medición
                         ===================================================== -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Última Medición -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Última Medición"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/roboto_bold"/>

                                <TextView
                                    android:id="@+id/tv_ultima_fecha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08/09/2025"
                                    android:textSize="12sp"
                                    android:textColor="#777"
                                    android:layout_marginTop="3dp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tv_ultima_valor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.02"
                                        android:textSize="36sp"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:id="@+id/tv_ultima_gas"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="NO₂ \nppm"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <!-- Icono calidad última medida -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/img_ultima_calidad"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/ic_estado_bueno" />

                                    <TextView
                                        android:id="@+id/tv_ultima_calidad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Buena"
                                        android:textSize="14sp"/>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Promedio Día -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="6dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Promedio del Día"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/roboto_bold"/>

                                <TextView
                                    android:id="@+id/tv_promedio_fecha"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08/09/2025"
                                    android:textSize="12sp"
                                    android:textColor="#777"
                                    android:layout_marginTop="3dp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tv_promedio_valor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.10"
                                        android:textSize="36sp"
                                        android:fontFamily="@font/roboto_bold"/>

                                    <TextView
                                        android:id="@+id/tv_promedio_gas"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:text="NO₂ \nppm"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <!-- Icono calidad promedio -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/img_promedio_calidad"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/ic_estado_bueno" />

                                    <TextView
                                        android:id="@+id/tv_promedio_calidad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Buena"
                                        android:textSize="14sp"/>
                                </LinearLayout>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- =====================================================
                         TARJETA ANCHA → Gráfica
                         ===================================================== -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_calidad_titulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Calidad del Aire"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <!-- TARJETA COMPLETA DE LA GRÁFICA -->
                            <LinearLayout
                                android:id="@+id/layoutGraficaCalidad"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <!-- FILA SUPERIOR: título + info + D/H + carita -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <!-- TÍTULO -->
                                    <TextView
                                        android:id="@+id/txtTituloGrafica"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Gráfica de Calidad del aire"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <!-- ICONO INFO -->
                                    <ImageView
                                        android:id="@+id/btnInfoGrafica"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="8dp"
                                        android:src="@drawable/ic_info"
                                        android:contentDescription="Información" />

                                    <!-- CONTENEDOR D/H -->
                                    <LinearLayout
                                        android:id="@+id/layoutModoGrafica"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/btnModoDia"
                                            android:layout_width="32dp"
                                            android:layout_height="28dp"
                                            android:gravity="center"
                                            android:text="D"
                                            android:textSize="12sp"
                                            android:background="@drawable/bg_modo_unselected" />

                                        <TextView
                                            android:id="@+id/btnModoHora"
                                            android:layout_width="32dp"
                                            android:layout_height="28dp"
                                            android:layout_marginStart="4dp"
                                            android:gravity="center"
                                            android:text="H"
                                            android:textSize="12sp"
                                            android:background="@drawable/bg_modo_unselected" />
                                    </LinearLayout>

                                    <!-- CARITA -->
                                    <LinearLayout
                                        android:id="@+id/layoutEstadoCalidad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="12dp"
                                        android:orientation="vertical"
                                        android:gravity="center_horizontal">

                                        <ImageView
                                            android:id="@+id/iconEstadoCalidad"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            android:src="@drawable/ic_estado_regular" />

                                        <TextView
                                            android:id="@+id/txtEstadoCalidad"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Insalubre"
                                            android:textSize="10sp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- RANGO DE FECHAS -->
                                <TextView
                                    android:id="@+id/txtRangoFechasGrafica"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="17/11 al 23/11"
                                    android:textSize="11sp"
                                    android:layout_marginTop="4dp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="8dp" />

                                <!-- LA GRÁFICA MPAndroidChart -->
                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/barChartCalidadAire"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"/>

                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- =============================================================
         MENÚ INFERIOR (FIJO ABAJO)
         ============================================================= -->
    <include layout="@layout/bottom_nav"/>

</LinearLayout>
