<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo global del botón -->
    <style name="BotonPrincipal" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="BotonSecundarioOutlined" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_boton_outlined</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>

        <item name="android:textColor">@color/verde_principal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>

        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- Estilo global para los campos de texto -->
    <style name="CampoTextoLinea">
        <!-- Fondo: SOLO la línea -->
        <item name="android:background">@drawable/edittext_underline_full</item>

        <!-- Quita el borde por defecto del tema Material -->
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:stateListAnimator">@null</item>

        <!-- Texto del usuario -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>

        <!-- Espacio para que el texto no toque la línea -->
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="CampoTextoEdit">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupWhiteFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="InfoPopupTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PopupTarjetaReal" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item> <!-- ANCHO -->
        <item name="android:windowMinWidthMinor">90%</item> <!-- LANDSCAPE -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- TITULOS -->
    <style name="TextoHeadline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/verde_principal</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Párrafos -->
    <style name="TextoParrafoPrincipal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textoSecundario</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

</resources>
